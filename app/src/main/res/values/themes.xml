<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AsteroidRadarArch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AsteroidRadarArch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AsteroidRadarArch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AsteroidRadarArch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseTextView">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="ImageOfTheDayTitle" parent="BaseTextView">
        <item name="android:padding">@dimen/dimen_16_dp</item>
        <item name="android:textSize">@dimen/dimen_20_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/background_image_of_the_day_text</item>
    </style>

    <style name="ItemTitle" parent="BaseTextView">
        <item name="android:textSize">@dimen/dimen_18_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSubTitle" parent="BaseTextView">
        <item name="android:textSize">@dimen/dimen_16_sp</item>
    </style>

    <style name="ItemList">
        <item name="android:paddingStart">@dimen/dimen_16_dp</item>
        <item name="android:paddingTop">@dimen/dimen_16_dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16_dp</item>
    </style>

</resources>